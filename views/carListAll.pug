doctype html
html(lang='en')
  head
    title Jade
    link(href='style.css', rel='stylesheet')
    link(href='https://fonts.googleapis.com/css?family=Montserrat', rel='stylesheet')
  body
    .ohlssonsbil-body
      .header
        .logo
          a.logo.logo-link(href='index.html') OHLSSONS BIL
      .grey-body
        .product
                         p.headline= "TILLGÄNGLIGA BILAR" + " " + pickedDate
                    div
                        for car in carList
                            ul
                                figure
                                    img(src=car.imgLink)
                                section    
                                    li= "Typ: "
                                        span.inputjs= car.fordonstyp
                                    li= "Märke: " 
                                        span.inputjs= car.brand + " "+ car.model
                                    li= "Körkort: " 
                                        span.inputjs= car.requiredDrivingLicense
                                    li= "År: "
                                        span.inputjs= car.year
                                    li= "Växellåda: "
                                        span.inputjs= car.gearbox
                                    li= "Kostnad: " 
                                        span.inputjs= car.dagshyra + "kr/dag"
                                    li= "Kommentarer: "
                                        span.inputjs= car.kommentarer.skador
                            a.btn-book(href='/confirmbooking') BOKA!
    script(src='vanillacalendar.js', type='text/javascript')
    script.
      window.addEventListener('load', function () {
      vanillacalendar.init();
      })


                
